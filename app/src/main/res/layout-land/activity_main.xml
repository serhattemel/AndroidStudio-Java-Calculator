<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="151dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/calculate"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clear"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/clear"
            android:layout_width="133dp"
            android:layout_height="73dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:text="Clear"
            app:layout_constraintEnd_toStartOf="@+id/calculate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/equal"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:text="="
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/b0"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bplus"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/bdot"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp"
            android:text=","
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bplus" />

        <Button
            android:id="@+id/b2"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="36dp"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@+id/b0"
            app:layout_constraintEnd_toStartOf="@+id/b3" />

        <Button
            android:id="@+id/b1"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@+id/equal"
            app:layout_constraintEnd_toStartOf="@+id/b2"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/b3"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@+id/bdot"
            app:layout_constraintEnd_toStartOf="@+id/bminus" />

        <Button
            android:id="@+id/bminus"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:text="-"
            app:layout_constraintBottom_toTopOf="@+id/bplus"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/b7"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@+id/b4"
            app:layout_constraintEnd_toStartOf="@+id/b8"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bx"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:text="X"
            app:layout_constraintBottom_toTopOf="@+id/bdevide"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/b8"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="36dp"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@+id/b5"
            app:layout_constraintEnd_toStartOf="@+id/b9" />

        <Button
            android:id="@+id/b5"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="36dp"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@+id/b2"
            app:layout_constraintEnd_toStartOf="@+id/b6" />

        <Button
            android:id="@+id/b9"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@+id/b6"
            app:layout_constraintEnd_toStartOf="@+id/bx" />

        <Button
            android:id="@+id/b6"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@+id/b3"
            app:layout_constraintEnd_toStartOf="@+id/bdevide" />

        <Button
            android:id="@+id/bdevide"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:text="/"
            app:layout_constraintBottom_toTopOf="@+id/bminus"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/b4"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@+id/b1"
            app:layout_constraintEnd_toStartOf="@+id/b5"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/b0"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bdot" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>